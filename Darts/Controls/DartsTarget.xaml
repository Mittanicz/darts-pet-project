<UserControl x:Class="Darts.Controls.DartsTarget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Darts.Controls">
    <UserControl.Resources>
        <Style TargetType="Button"
               x:Key="TargetCenterButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Ellipse Width="{TemplateBinding Height}"
                                 Height="{TemplateBinding Height}"
                                 Fill="{TemplateBinding Background}"
                                 Stroke="Black"
                                 StrokeThickness="1"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="TargetLightBackground"
                         Color="#ebe2d3" />
        <SolidColorBrush x:Key="TargetDarkBackground"
                         Color="Black" />
        <Style TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="FontSize"
                    Value="25" />
            <Setter Property="TextAlignment"
                    Value="Center" />
        </Style>
        <Style TargetType="UserControl"
               x:Key="RedButton">
            <Setter Property="Background"
                    Value="Black" />
            <Setter Property="BorderBrush"
                    Value="Red" />
        </Style>
        <Style TargetType="UserControl"
               x:Key="GreenButton">
            <Setter Property="Background"
                    Value="Orange" />
            <Setter Property="BorderBrush"
                    Value="Green" />
        </Style>
    </UserControl.Resources>
    <Canvas Width="500"
            Height="500"
            Background="White">

        <Button Background="Black"
                Height="500"
                Style="{StaticResource TargetCenterButton}"/>

        <local:DartsTargetBackgroundButton Canvas.Left="250"
                                           Canvas.Top="250"
                                           Style="{StaticResource RedButton}" />
